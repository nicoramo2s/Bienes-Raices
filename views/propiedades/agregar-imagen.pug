extends ../layouts/admin

block styles
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
  meta(name="csrf-token" content= csrfToken)

block contenido 
  div.py-10
    h1.text-6xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2(class="font-extrabold text-center text-2xl")= pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores               
          p(class="bg-red-600 text-white uppercase text-sm text-center p-1 mb-1 font-bold")= error.msg

    div(class="bg-white px-4 py-8 rounded mx-auto max-w-4xl my-10 md:px-10")
      form(
        id="imagen" 
        class="dropzone border-dashed border-2 w-full min:h-96 h-auto justify-center rounded flex-col items-center" action=`/propiedades/agregar-imagen/${propiedad.id}` 
        method="POST" 
      )
        input(type="hidden" name="_csrf" value= csrfToken)

      button(id="publicar" type="button" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer") Publicar Imagen
      
block scripts
  script(src="/js/agregarImagen.js")