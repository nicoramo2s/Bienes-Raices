extends ../layouts/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2(class="font-extrabold text-center text-4xl")= pagina 
    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        p(class= error ? 'bg-red-500' : 'bg-green-500').py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= mensaje

        if !error
            a(href="/auth/login" class="text-center font-bold text-gray-600 uppercase hover:underline hover:bg-gray-800 hover:text-white rounded-lg p-2 mt-10 block") Ya Puedes Iniciar sesion
