extends ../layouts/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2(class="font-extrabold text-center text-4xl")= pagina 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-sm text-center p-1 mb-1 font-bold")= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(action="/auth/olvide-password" class="space-y-5" method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label(for="email" class="block text-sm uppercase text-gray-500 mb-3 font-bold") Email
                        input(type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Email" name="email")
                    div(class="flex items-center justify-between text-gray-500 text-sm")
                        a(href="/auth/login" class="hover:underline") ¿Ya tienes cuenta? Inicia Sesion
                        a(href="/auth/registro" class="hover:underline") ¿No tienes Cuenta? Crea Una             
                    input(type="submit" value="Enviar Intrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")